
{
    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": false,
        "paths": {
            "@/*": ["./docs/*"],
            "@vitepress/*": ["./docs/.vitepress/*"],

            "@shared/*": ["./docs/shared/*"],
            "@components/*": ["./docs/shared/components/*"],
            "@features/*": ["./docs/features/*"],
            "@widgets/*": ["./docs/widgets/*"],
            "@entities/*": ["./docs/entities/*"],

            "@data/*": ["./docs/data/*"],
            "@hooks/*": ["./docs/hooks/*"],
            "@pages/*": ["./docs/pages/*"],
        }
    },
    "include": [
        ".eslintrc-auto-import.json",

        "docs/.vitepress/*.mts",
        "docs/.vitepress/theme/*.ts",
        "docs/.vitepress/theme/**/*.ts",
        "docs/.vitepress/theme/**/*.vue",

        "docs/shared/**/*.ts",
        "docs/shared/**/*.vue",
        "docs/shared/hooks/*.ts",
        "docs/shared/data/*.data.ts",
        "docs/shared/components/**/*.vue",
        "docs/shared/data/tagSummeries.ts",

        "docs/types/*.d.ts",

        "docs/features/**/*.ts",
        "docs/features/**/*.vue",
        "docs/widgets/**/*.ts",
        "docs/widgets/**/*.vue",
        "docs/entities/**/*.ts",
        "docs/entities/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "resource"
    ]
}
